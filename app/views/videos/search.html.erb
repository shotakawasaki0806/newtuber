<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは、
        <%= link_to "#{current_user.channel_name}さん", user_path(current_user), class: :greeting__link%>
      </div>
    <% end %>
    <div class="card__wrapper">
      <% @videos.each do |video| %>
        <%= render partial: "video", locals: { video: video } %>
      <% end %>
    </div>
    <div class="to-top", id="to-top">
      <%= "⇧" %>
    </div>
  </div>
</main>